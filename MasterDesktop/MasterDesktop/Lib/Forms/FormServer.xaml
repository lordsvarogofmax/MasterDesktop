        <Label x:Name="label_Ip_Server" Content="IP адрес сервиса" HorizontalAlignment="Left" Margin="18,32,0,0" VerticalAlignment="Top" Foreground="Black"/>
        <Label x:Name="label_Port_Server" Content="Port сервиса" HorizontalAlignment="Left" Margin="18,77,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_MD5_Server" Content="MD5 ключ сервера" HorizontalAlignment="Left" Margin="18,120,0,0" VerticalAlignment="Top"/>
