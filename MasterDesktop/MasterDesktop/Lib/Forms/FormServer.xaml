        <ComboBox x:Name="combobox_Protocol_Server" HorizontalAlignment="Left" Margin="154,163,0,0" VerticalAlignment="Top" Width="120" IsSynchronizedWithCurrentItem="True" SelectionChanged="combobox_Protocol_Server_SelectionChanged">
            <ComboBoxItem Content="HTTP" IsSelected="True"/>
            <ComboBoxItem Content="HTTPS"/>
        </ComboBox>

    </Grid>
</Window>
